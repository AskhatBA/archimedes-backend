    "db:generate": "prisma generate --schema=./src/infrastructure/db/schema.prisma",
    "db:push": "prisma db push --schema=./src/infrastructure/db/schema.prisma",
    "db:studio": "prisma studio --schema=./src/infrastructure/db/schema.prisma"
  },

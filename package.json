  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc && tsc-alias",
    "start:prod": "NODE_ENV=production npm run build && npm start",
    "db:migrate": "prisma migrate dev --schema=./src/infrastructure/db/schema.prisma",
